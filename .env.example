# Environment Configuration for Chromium RAG System

# Python Path
PYTHONPATH=.

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="8.9+PTX"  # RTX 5080 architecture

# Embedding Model Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=128
MAX_SEQUENCE_LENGTH=512

# Vector Database Configuration
VECTOR_DB=chromadb
COLLECTION_NAME=chromium_complete
PERSIST_DIRECTORY=./data/cache/vector_db

# Chromium Repository
CHROMIUM_REPO_PATH=d:\r\cr\src

# Data Directories
DATA_CACHE_DIR=./data/cache
EMBEDDINGS_DIR=./data/embeddings
MASSIVE_CACHE_DIR=./data/massive_cache
LOGS_DIR=./logs

# Ingestion Configuration
BATCH_SIZE=1000
EMBEDDING_BATCH_SIZE=128
MAX_WORKERS=8
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Search Configuration
TOP_K=10
RETRIEVAL_STRATEGY=semantic
USE_RERANKING=false
SIMILARITY_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Configuration
MEMORY_FRACTION=0.9
ENABLE_MIXED_PRECISION=false

# Monitoring (Streamlit Dashboard)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false